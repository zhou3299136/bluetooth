<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/backad_bg"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_image"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="中山蝰蛇摄影科技有限公司"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="AFoto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="Photography Technology Co., Ltd."
            />

        <TextView
            android:id="@+id/connecting_device"
            android:layout_width="230dp"
            android:layout_height="31dp"
            android:text="连接设备"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/shape_main_bg_false"
            />


    </LinearLayout>


</RelativeLayout>